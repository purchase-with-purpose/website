---
import { getCollection } from "astro:content";

const software = await getCollection("software");
const indicators = await getCollection("indicators");
const categories = await getCollection("categories");
const origins = await getCollection("origins");
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <h1>Purchase with Purpose</h1>

    <h2>Indicators</h2>

    <ul>
      {
        indicators.map((x) => (
          <li>
            <a href={`/indicators/${x.id}`}>{x.data.label}</a>
          </li>
        ))
      }
    </ul>

    <h2>Origins</h2>

    <ul>
      {
        origins.map((x) => (
          <li>
            <a href={`/origins/${x.id}`}>{x.data.label}</a>
          </li>
        ))
      }
    </ul>

    <h2>Categories</h2>

    <ul>
      {
        categories.map((x) => (
          <li>
            <a href={`/categories/${x.id}`}>{x.data.label}</a>
          </li>
        ))
      }
    </ul>

    <h2>Software</h2>

    <ul>
      {
        software.map((x) => (
          <li>
            <a href={`/software/${x.id}`}>{x.data.label}</a>
          </li>
        ))
      }
    </ul>
  </body>
</html>
